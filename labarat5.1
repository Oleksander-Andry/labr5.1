using System;
using System.Text;

class Program
{
    public static void Main()
    {
        Console.OutputEncoding = Encoding.UTF8;

        Console.WriteLine("Абстрактний клас\n");
        Solid shape;

        Console.WriteLine("Пiрамiда: ");
        Console.WriteLine("Введiть довжину сторони основу пiрамiди:");
        double a = double.Parse(Console.ReadLine());
        Console.WriteLine("Введiть висоту пiрамiди:");
        double h = double.Parse(Console.ReadLine());

        shape = new Pyramid(a, h);
        Console.WriteLine("Периметр: " + shape.GetVolume() + "\n");

        Console.WriteLine("Куля: ");
        Console.WriteLine("Введiть радiус кулi:");
